<div class="p-3">
    {% if article.featuredImageVisible %}
        <div class="row g-3">
            <div class="col-4">
                <img src="{{ asset(article.featuredImageUrl) }}" class="img-fluid img-thumbnail" alt="{{ article.title }}" style="max-height: 600px">
            </div>
            <div class="col-7">
                {% if article.titleVisible %}
                    <div class="col">
                        <div class="fw-bold display-4">{{ article.title }}</div>
                    </div>
                {% endif %}

                {% if article.contentVisible %}
                    <div class="col fs-4">
                        {{ article.content|raw }}
                    </div>
                {% endif %}
            </div>
        </div>
    {% else %}
        {% if article.titleVisible %}
            <div class="col-12">
                <div class="fw-bold display-4">{{ article.title }}</div>
            </div>
        {% endif %}

        {% if article.contentVisible %}
            <div class="col-12 fs-4">
                {{ article.content|raw }}
            </div>
        {% endif %}
    {% endif %}
</div>

