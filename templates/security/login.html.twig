<html lang="de">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <meta name="description" content="Digital Signage Display Software">
    <meta name="author" content="Benjamin Wagner">
    <title>Login</title>

    <!-- Font Awesome -->
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
            rel="stylesheet"
    />
    <!-- Google Fonts -->
    <link
            href="https://fonts.googleapis.com/css?family=Roboto:300,400,500,700&display=swap"
            rel="stylesheet"
    />
    <!-- MDB -->
    <link
            href="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.min.css"
            rel="stylesheet"
    />
    <style>
        .gradient-custom-2 {
            /* fallback for old browsers */
            background: #fccb90;

            /* Chrome 10-25, Safari 5.1-6 */
            background: -webkit-linear-gradient(to right, #255372, #255372, #255372, #255372);

            /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
            background: linear-gradient(to right, #255372, #255372, #255372, #255372);
        }

        @media (min-width: 768px) {
            .gradient-form {
                height: 100vh !important;
            }
        }
        @media (min-width: 769px) {
            .gradient-custom-2 {
                border-top-right-radius: .3rem;
                border-bottom-right-radius: .3rem;
            }
        }
    </style>
</head>
<body>
<section class="h-100 gradient-form" style="background-color: #eee;">
    <div class="container py-5 h-100">
        <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-xl-10">
                <div class="card rounded-3 text-black">
                    <div class="row g-0">
                        <div class="col-lg-6">
                            <div class="card-body p-md-5 mx-md-4">

                                <div class="text-center">
                                    <img src="{{ asset('images/mstile-144x144.png') }}" class="mb-3" height="64" alt="TK Logo">
                                    <h4 class="mt-1 mb-5 pb-1">Signage Display Control</h4>
                                </div>

                                {% if error %}
                                    <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
                                {% endif %}

                                {% if app.user %}
                                    <div class="mb-5 text-center">
                                        Sie sind eingeloggt als {{ app.user.userIdentifier }}. <a href="{{ path('app_logout') }}">Logout</a>
                                    </div>
                                {% else %}
                                    <form method="post">
                                        <p>Bitte anmelden</p>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <input type="text" id="username" name="_username" autocomplete="username" required autofocus class="form-control"
                                                   placeholder="Kennung" />
                                            <label class="form-label" for="username">Kennung</label>
                                        </div>

                                        <div data-mdb-input-init class="form-outline mb-4">
                                            <input type="password" id="password" name="_password" class="form-control"  autocomplete="current-password" required />
                                            <label class="form-label" for="password">Passwort</label>
                                        </div>

                                        <input type="hidden" name="_csrf_token"
                                               value="{{ csrf_token('authenticate') }}"
                                        >

                                        <div class="text-center pt-1 mb-5 pb-1">
                                            <button  data-mdb-ripple-init class="btn btn-primary btn-block fa-lg mb-3" type="submit">Log
                                                in</button>
                                        </div>

                                    </form>
                                {% endif %}
                                <p class="small text-muted mb-0">
                                    &copy;2024 Benjamin Wagner<br>
                                    <a class="" href="{{ url('app_privacy') }}">Datenschutz</a>
                                    <a class="ms-2" href="{{ url('app_imprint') }}">Impressum</a>
                                </p>
                            </div>
                        </div>
                        <div class="col-lg-6 bg-light">
                            <div class="px-3 py-4 p-md-5 mx-md-4">
                                <div class="row row-cols-1 g-3">
                                    <h5>Weitere Anwendungen</h5>
                                    <a target="_blank" class="btn btn-lg btn-secondary d-block py-3" href="https://wahl.wagnerpictures.com/">Wahl Digital</a>
                                    <a target="_blank" class="btn btn-lg btn-secondary d-block py-3" href="https://abi.treptowkolleg.de/">5. PK Pr√ºfungsthemen</a>
                                    <a target="_blank" class="btn btn-lg btn-secondary d-block py-3" href="https://it.wagnerpictures.com/?page=t-abirechner">Abi-Rechner</a>
                                    <a target="_blank" class="btn btn-lg btn-secondary d-block py-3" href="https://it.wagnerpictures.com/?page=docs-sql">SQL-Training</a>
                                    <a target="_blank" class="btn btn-lg btn-secondary d-block py-3" href="https://it.wagnerpictures.com/">AG informatik</a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>
<!-- MDB -->
<script
        type="text/javascript"
        src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/7.3.2/mdb.umd.min.js"
></script>
</body>
</html>



